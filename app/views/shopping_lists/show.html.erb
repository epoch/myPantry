      <% end %>
  <% end %>
  </div>
  <div class="col-md-6">
    <h4>shopping list</h4>
    <div class="section">
    </div>

  </div>
</div>

<%= link_to 'delete', @shopping_list, method: :delete, data: { confirm: 'Are you sure?' } %>

